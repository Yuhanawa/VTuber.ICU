---
interface Props {
  item: string;
}
const { item } = Astro.props;
const content = await Astro.slots.render("default");
---

{
  content.trim() && (
    <li>
      <span>{item}</span>
      <Fragment set:html={content} />
    </li>
  )
}

<style>
  li {
    display: flex;
    flex-direction: row;
    text-wrap: wrap;
    word-break: break-all;
    width: 100%;
  }
  span {
    font-weight: bold;
    min-width: 5em;
  }
</style>
