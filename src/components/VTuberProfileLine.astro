---
interface Props {
  label: string;
}
const { label } = Astro.props;
---

{
  Astro.slots.has("default") !== undefined && (
    <li>
      <span>{label}</span> <slot />
    </li>
  )
};

<style>
  li {
    display: flex;
    flex-direction: column;
  }
  span {
    font-weight: bold;
  }
</style>
