---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";
import BaseLayout from "./BaseLayout.astro";
import VTuberProfile from "../components/VTuberProfile.astro";
import PostLayout from "./PostLayout.astro";

type Props = CollectionEntry<"v">["data"];

const { title, description, pubDate, updatedDate, heroImage, profile } = Astro.props;
---

<PostLayout {...Astro.props}>
  {
    profile && (
      <>
        <VTuberProfile {...profile} />
        <hr />
      </>
    )
  }

  <slot />
</PostLayout>
<style>
  hr {
    margin: 1em 0;
    border: 1px solid rgb(var(--gray));
    background-color: rgb(var(--gray));
  }
</style>
