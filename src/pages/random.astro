---
import Layout from "../layouts/PostLayout.astro";
---

<Layout
  title="Random"
  description="Lorem ipsum dolor sit amet"
  pubDate={new Date("2024-10-31")}
  heroImage="/blog-placeholder-about.jpg"
>
  <script>
    const websiteMap: { priority: number; url: string }[] = [
      { priority: 1, url: "https://vo.qq.com/" }, // 虚环官网
      { priority: 3, url: "https://www.bilibili.com/video/BV1WcvdeVEvo/" }, // 虚环PV
      { priority: 2, url: "https://space.bilibili.com/1265680561" }, // 永雏塔菲
      { priority: 2, url: "https://space.bilibili.com/1437582453" }, // 東雪蓮Official
      { priority: 2, url: "https://space.bilibili.com/672328094" }, // 嘉然今天吃什么
      { priority: 2, url: "https://space.bilibili.com/1555453291" }, // 库莉姆Cream
      { priority: 2, url: "https://space.bilibili.com/1398337493" }, // 鲸鱼娘西丝特official
      { priority: 1, url: "https://www.jd.com/" }, // 京东官网
    ];

    const weightedWebsites: string[] = [];
    websiteMap.forEach((website) => {
      for (let i = 0; i < website.priority; i++) {
        weightedWebsites.push(website.url);
      }
    });

    const randomIndex = Math.floor(Math.random() * weightedWebsites.length);
    const randomWebsite = weightedWebsites[randomIndex];
    window.location.href = randomWebsite;
  </script>
</Layout>
